<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/images/Logo.png" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.24/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen flex flex-col">
        @*Header*@
        <nav class="bg-white sticky top-0 z-10 shadow shadow-lg transition-shadow border-gray-200 py-2.5 dark:bg-gray-900">
            <div class="flex flex-wrap items-center justify-between max-w-screen-xl px-4 mx-auto">
                @*Logo*@
                <a href="/" class="">
                    <img src="/Content/images/Logo.png" class="h-10 mr-3 sm:h-16" alt="Landwind Logo">
                </a>

                <div>
                    <ul class="md:flex items-center justify-between text-base text-gray-600 pt-4 md:pt-0">
                        <li><a class="md:p-4 py-3 px-0 block" href="#">Home</a></li>
                        <li><a class="md:p-4 py-3 px-0 block" href="#">Services</a></li>
                        <li><a class="md:p-4 py-3 px-0 block" href="#">About Us</a></li>
                        <li><a class="md:p-4 py-3 px-0 block md:mb-0 mb-2" href="#">Contact</a></li>
                    </ul>
                </div>

                @{
                    Boolean login = true;
                    if (login)
                    {
                        @*Account action*@
                        <div class="dropdown relative">
                            <label tabindex="0" class="focus:btn-outline cursor-pointer focus:text-orange-500 normal-case text-orange-500 ml-2">
                                <img src="~/Content/images/user.jpg" class="w-10 h-10"/>
                            </label>
                            <!-- component -->

                            <div tabindex="0" class="dropdown-content right-0 z-[1] menu p-2 shadow bg-base-100 rounded-box w-80 drop-shadow-md">
                                <div class="rounded-lg  p-3 drop-shadow-xl divide-y divide-neutral">
                                    <div class="flex space-x-4 items-center p-4">
                                        <div class="flex w-full mr-auto items-center space-x-4">
                                            <a href="#" class="w-full space-y-2 flex flex-col flex-1 truncate focus:outline-none hover:bg-gray-100">
                                                <div class="relative leading-tight text-gray-900">
                                                    <span class="flex">
                                                        <span class="relative pr-8 text-xl">Le Nguyen Tan Thi</span>
                                                    </span>
                                                </div>
                                                <p class="font-normal text-base leading-tight truncate">example@mail.com</p>
                                            </a>
                                        </div>
                                    </div>
                                    <div aria-label="navigation" class="py-2">
                                        <nav class="grid gap-1">
                                            <a href="/" class="flex items-center leading-6 space-x-3 py-3 px-4 w-full text-lg text-gray-600 focus:outline-none hover:bg-gray-100 rounded-md">
                                                <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M3 5C3 3.89543 3.89543 3 5 3H9C10.1046 3 11 3.89543 11 5V9C11 10.1046 10.1046 11 9 11H5C3.89543 11 3 10.1046 3 9V5ZM9 5H5V9H9V5Z" />
                                                    <path d="M3 15C3 13.8954 3.89543 13 5 13H9C10.1046 13 11 13.8954 11 15V19C11 20.1046 10.1046 21 9 21H5C3.89543 21 3 20.1046 3 19V15ZM9 15H5V19H9V15Z" />
                                                    <path d="M13 5C13 3.89543 13.8954 3 15 3H19C20.1046 3 21 3.89543 21 5V9C21 10.1046 20.1046 11 19 11H15C13.8954 11 13 10.1046 13 9V5ZM19 5H15V9H19V5Z" />
                                                    <path d="M13 15C13 13.8954 13.8954 13 15 13H19C20.1046 13 21 13.8954 21 15V19C21 20.1046 20.1046 21 19 21H15C13.8954 21 13 20.1046 13 19V15ZM19 15H15V19H19V15Z" />
                                                </svg>
                                                <span>My posts</span>
                                            </a>
                                            <a href="/" class="flex items-center leading-6 space-x-3 py-3 px-4 w-full text-lg text-gray-600 focus:outline-none hover:bg-gray-100 rounded-md">
                                                <svg class="w-7 h-7" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                    <path d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065z"></path>
                                                    <path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path>
                                                </svg>
                                                <span>Setting</span>
                                            </a>
                                        </nav>
                                    </div>
                                    <div class="pt-2">
                                        <button type="button" class="flex items-center space-x-3 py-3 px-4 w-full leading-6 text-lg text-gray-600 focus:outline-none hover:bg-gray-100 rounded-md">
                                            <svg class="w-7 h-7" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                                <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2"></path>
                                                <path d="M9 12h12l-3 -3"></path>
                                                <path d="M18 15l3 -3"></path>
                                            </svg>
                                            <span>Log out</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        @*Login/ Sign Up*@
                        <div class="flex items-center lg:order-2">
                            <div>
                                class="hidden mt-2 mr-4 sm:inline-block">
                                <span></span>
                            </div>

                            <a href="/account/login"
                               class="bg-blue-700 hover:bg-blue-800  focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 text-white lg:px-8 py-2 lg:py-2.5 sm:mr-2 lg:mr-0 dark:bg-purple-600 dark:hover:bg-purple-700 focus:outline-none dark:focus:ring-purple-800">
                                Login
                            </a>

                            <a href="/account/signup"
                               class="border-2 border-blue-800 ml-5 hover:border-blue-400 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-4 text-blue-800 lg:px-5 py-2 sm:mr-2 lg:mr-0 dark:bg-purple-600 dark:hover:bg-purple-700 focus:outline-none dark:focus:ring-purple-800">
                                Sign Up
                            </a>
                            <button data-collapse-toggle="mobile-menu-2" type="button"
                                    class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
                                    aria-controls="mobile-menu-2" aria-expanded="true">
                                <span class="sr-only">Open main menu</span>
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                                          clip-rule="evenodd"></path>
                                </svg>
                                <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd"
                                          d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                                          clip-rule="evenodd"></path>
                                </svg>
                            </button>
                        </div>
                    }
                }



</div>
        </nav>

        @*Body*@
        <div class="flex-grow flex">
            @RenderBody()
        </div>

        @*Footer*@
        <footer class="flex flex-col space-y-2 justify-center m-10 mb-2">
        
        <p class="text-center text-gray-700 font-medium">&copy; 2024 Tan Thi - All rights reservered.</p>
    </footer>
    </div>
    <script src="https://unpkg.com/flowbite@1.4.1/dist/flowbite.js"></script>
</body>
</html>